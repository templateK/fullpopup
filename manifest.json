{
    "name"        : "full popup",
    "description" : "popup current tab in full window",
    "version"     : "0.0.1",

    "permissions": [
      "storage",
      "tabs",
      "contextMenus"
    ],

    "icons": {
      "16"  : "icon-16.png",
      "48"  : "icon-48.png",
      "128" : "icon-128.png"
    },
    
    "content_scripts": [
        {
        "matches" : [ "https://*/**"],
        "js"      : ["content.js"],
        "run_at"  : "document_end"
        }
    ],

    "background": {
      "scripts"    : ["chrome-extension-async.js",
                      "background.js"],
      "persistent" : true
    },

    "options_page" : "options.html",

    "manifest_version":2
}
